<h1><%= @blog.title %></h1>
<p><%= @blog.description %></p>

<p id="notice"><%= notice %></p>

<ul>
  <% @blog.entries.each do |entry| %>
  <li>
    <strong><%= entry.title %></strong>
    <p><%= entry.body %></p>
  </li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
